{
    "family": "logspout-dev",
	"volumes": [
    {
      "name": "dockersock",
      "host": {
        "sourcePath": "/var/run/docker.sock"
      }
    }
	],
    "containerDefinitions": [
        {
            "name": "logspout-task",
            "image": "signiantdevops/logspout-ecs:latest",
            "cpu": 10,
            "memory": 10,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000
                }
            ],
			"command": [
				"syslog://logs2.papertrailapp.com:<YOUR PORT>"
			],
			"environment": [
				{ "name": "SYSLOG_HOSTNAME", "value": "logspout-dev" },
				{ "name": "SYSLOG_FORMAT", "value": "rfc3164" }
			],
            "essential": true,
			"mountPoints": [
			{
				"sourceVolume": "dockersock",
				"containerPath": "/tmp/docker.sock"
			}
			]
        }
    ]
}
